<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1559443922-3f698a0ff27a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1569&q=80);">
  <div class="container">
    <h1 id="header">Fancy Cocktails</h1>
    <br>
    <p >Enter into the World of delicious cocktails!</p>
    <p id="subtitle">Create your own and:</p>
    <%= link_to new_cocktail_path do %>
    <div class="btn btn-flat">Shake it!</div>
    <% end %>

  </div>
</div>

<div class="container">
<div class="cards">
  <% @cocktails.each do |one_cocktail|  %>
  <div class="card-product">
    <img src="https://images.unsplash.com/photo-1546171753-97d7676e4602?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" />
    <div class="card-product-infos">
      <h2><%= link_to one_cocktail.name, cocktail_path(one_cocktail) %></h2>
      <p id ="remove"><i class="fas fa-trash-alt"></i> <%=link_to 'Remove', one_cocktail, method: :delete, data: { confirm: 'Are you sure?'}%></p>
      <p>Product description with <strong>relevant info</strong> only.</p>
    </div>
  </div>
  <% end %>
  </div>
</div>

